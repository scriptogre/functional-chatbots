{#def order_id #}

<Modal>
    <Card class="py-6 px-8">
        <h3 class="sm:text-lg font-[500] mb-4">
            Delete Pizza Order #{{ order_id }}
        </h3>
        <p class="mb-8">
            Are you sure you want to delete this pizza order?
        </p>
        <div class="flex justify-end items-center gap-2">
            <form method="dialog" class="w-1/3">
                <Button class="w-full hover:bg-neutral-200 dark:hover:bg-neutral-700 dark:text-white text-black">
                    Cancel
                </Button>
            </form>

            <Button class="w-1/3 bg-red-500 hover:bg-red-600 dark:bg-red-500 dark:hover:bg-red-400 text-white dark:text-black"
                    hx-post={{ "/pizza-orders/"~order_id~"/delete" }}
                    hx-on--after-request="htmx.find('dialog').close()"
            >
                Yes
            </Button>
        </div>
    </Card>
</Modal>
