{#def name, value, checked, label, icon #}
<label class="group relative inline-flex flex-col items-center w-24 text-neutral-700 dark:text-neutral-300 has-[:checked]:text-neutral-900 dark:has-[:checked]:text-neutral-50 text-sm gap-1 px-3 py-1.5 sm:px-4 sm:py-2 cursor-pointer border border-transparent ring-2 ring-transparent hover:border-neutral-500/50 dark:hover:border-neutral-400/50 has-[:checked]:border-orange-500 dark:has-[:checked]:border-amber-500 rounded-lg duration-200 user-select-none">
    <!-- Hidden input to store the value -->
    <input name="{{ name }}" type="radio" value="{{ value }}"
           class="peer hidden" required {% if checked %}checked{% endif %} />

    <!-- Checkmark icon (top right, shown when selected) -->
    <iconify-icon icon="lets-icons:check-fill" class="text-transparent peer-checked:text-orange-500 dark:peer-checked:text-amber-500 absolute right-2 top-2 duration-200" height="none"></iconify-icon>

    <!-- Custom icon -->
    <iconify-icon icon="{{ icon }}" class="size-10 text-neutral-400 group-hover:text-neutral-500 dark:text-neutral-400 dark:group-hover:text-neutral-300 peer-checked:text-orange-500 dark:peer-checked:text-amber-500 duration-200" height="none"></iconify-icon>

    <!-- Label text -->
    <span class="peer-checked:font-[500]">{{ label }}</span>
</label>